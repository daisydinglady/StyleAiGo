.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.popup-content {
  background-color: white;
  width: 100%;
  max-height: 90vh;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  padding: 24px 20px;
  position: relative;
  overflow-y: auto;
  margin-top: auto;
  box-sizing: border-box;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.popup-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-close {
  font-size: 24px;
  color: #666;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16px;
}

.tag {
  display: inline-flex;
  align-items: center;
  padding: 4px 10px;
  background-color: #e0f2fe;
  color: #3b82f6;
  border-radius: 20px;
  font-size: 12px;
  margin-right: 8px;
  margin-bottom: 8px;
}

.weather-tag {
  background-color: #fef3c7;
  color: #d97706;
}

.tag-icon {
  margin-right: 4px;
}

.outfit-details {
  background-color: #ffffff;
  border-radius: 12px;
  border: 1px solid #eaeaea;
  padding: 16px;
  margin-bottom: 20px;
}

.section-title {
  display: block;
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 12px;
  color: #333;
}

.outfit-desc {
  font-size: 14px;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16px;
  display: block;
}

.clothing-item {
  display: flex;
  align-items: center;
  background-color: #f9f9f9;
  border-radius: 12px;
  padding: 12px;
  margin-bottom: 12px;
}

.clothing-item:last-child {
  margin-bottom: 0;
}

.clothing-item-icon {
  width: 46px;
  height: 46px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.icon-top {
  background-color: #e0f7fa;
  color: #00acc1;
}

.icon-bottom {
  background-color: #e3f2fd;
  color: #2196f3;
}

.icon-shoes {
  background-color: #e8f5e9;
  color: #4caf50;
}

.icon-accessory {
  background-color: #f3e5f5;
  color: #9c27b0;
}

.item-icon {
  font-size: 22px;
}

.item-info {
  flex: 1;
}

.item-title {
  font-size: 15px;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 4px;
}

.item-desc {
  font-size: 13px;
  color: #666;
  display: block;
}

.carousel {
  position: relative;
  overflow: hidden;
  border-radius: 12px;
  height: 350px;
  margin-bottom: 16px;
}

.carousel-inner {
  display: flex;
  transition: transform 0.3s ease;
  height: 100%;
}

.carousel-item {
  min-width: 100%;
  height: 100%;
}

.carousel-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.carousel-control {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(255, 255, 255, 0.7);
  width: 36px;
  height: 36px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.carousel-prev {
  left: 10px;
}

.carousel-next {
  right: 10px;
}

.control-icon {
  font-size: 18px;
  color: #333;
}

.carousel-indicators {
  position: absolute;
  bottom: 16px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 8px;
}

.carousel-indicator {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
}

.carousel-indicator.active {
  background-color: white;
}

.tips {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20px;
  background-color: #f9f9f9;
  padding: 12px;
  border-radius: 10px;
}

.tip-icon {
  font-size: 16px;
  margin-right: 8px;
  flex-shrink: 0;
}

.tip-text {
  font-size: 13px;
  color: #666;
  line-height: 1.5;
}

.action-buttons {
  display: flex;
  gap: 12px;
  margin-bottom: 40px;
}

.btn {
  flex: 1;
  height: 44px;
  border-radius: 22px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 15px;
  font-weight: 500;
}

.btn-primary {
  background-color: #3b82f6;
  color: white;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #666;
  border: 1px solid #e0e0e0;
}

.btn-icon {
  margin-right: 6px;
}

.popup-footer {
  border-top: 1px solid #eee;
  padding-top: 16px;
  text-align: center;
}

.footer-text {
  font-size: 12px;
  color: #999;
}
