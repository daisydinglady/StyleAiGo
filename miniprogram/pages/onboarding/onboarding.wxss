/* onboarding.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f7f7;
  display: flex;
  flex-direction: column;
}

.status-bar {
  height: 44px;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.status-title {
  font-size: 16px;
  color: #666;
  font-weight: 500;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.onboarding-page {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 24px;
}

.hidden {
  display: none;
}

.onboarding-header {
  text-align: center;
  margin-top: 20px;
  margin-bottom: 40px;
}

.welcome-emoji {
  font-size: 72px;
  display: block;
  margin-bottom: 16px;
}

.onboarding-title {
  display: block;
  font-size: 24px;
  font-weight: 600;
  margin-bottom: 12px;
}

.onboarding-subtitle {
  display: block;
  font-size: 16px;
  color: #666;
}

.intro-text {
  text-align: center;
  color: #666;
  margin-bottom: 60px;
  line-height: 1.6;
}

.button-wrapper {
  margin-top: auto;
  margin-bottom: 60px;
}

.primary-button {
  background-color: #3b82f6;
  color: white;
  padding: 16px 0;
  border-radius: 9999px;
  font-weight: 500;
  border: none;
}

.form-group {
  margin-bottom: 24px;
}

.form-label {
  display: block;
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 8px;
  color: #333;
}

.input-container {
  position: relative;
}

.form-input {
  width: 100%;
  padding: 12px 16px;
  border: 1px solid #ddd;
  border-radius: 12px;
  font-size: 16px;
  box-sizing: border-box;
}

.description-input {
  height: 120px;
  padding: 12px 16px;
}

.location-button {
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  color: #3b82f6;
}

.location-icon {
  font-size: 20px;
}

.hint-text {
  display: block;
  font-size: 12px;
  color: #666;
  margin-top: 8px;
}

.gender-selector {
  display: flex;
  gap: 16px;
}

.gender-option {
  flex: 1;
  padding: 16px;
  border: 1px solid #ddd;
  border-radius: 12px;
  text-align: center;
  transition: all 0.2s;
}

.gender-option.selected {
  border-color: #3b82f6;
  background-color: #e0f2fe;
}

.gender-icon {
  font-size: 32px;
  margin-bottom: 8px;
}

.male-icon {
  color: #3b82f6;
}

.female-icon {
  color: #ec4899;
}

.gender-text {
  font-weight: 500;
  font-size: 16px;
}

.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16px 24px 32px;
  background-color: #f7f7f7;
}

.progress-dots {
  display: flex;
  justify-content: center;
  margin-bottom: 24px;
}

.progress-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background-color: #ddd;
  margin: 0 4px;
}

.progress-dot.active {
  background-color: #3b82f6;
  width: 24px;
  border-radius: 4px;
}

.skip-button {
  text-align: center;
  color: #666;
  margin-top: 16px;
  font-size: 14px;
}
