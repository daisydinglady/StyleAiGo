/* onboarding.wxss */
.onboarding-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background-color: #f9f9f9;
  background-image: linear-gradient(
    to bottom,
    rgba(7, 193, 96, 0.05),
    rgba(7, 193, 96, 0.01)
  );
  padding: 20px 16px 40px;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 背景装饰元素 */
.onboarding-container::before {
  content: "";
  position: absolute;
  top: -50px;
  right: -50px;
  width: 200px;
  height: 200px;
  border-radius: 50%;
  background-color: rgba(7, 193, 96, 0.05);
  z-index: 0;
}

.onboarding-container::after {
  content: "";
  position: absolute;
  bottom: -80px;
  left: -80px;
  width: 250px;
  height: 250px;
  border-radius: 50%;
  background-color: rgba(7, 193, 96, 0.05);
  z-index: 0;
}

.onboarding-header {
  width: 100%;
  text-align: center;
  margin-top: 30px;
  margin-bottom: 40px;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.header-icon {
  width: 90px;
  height: 90px;
  margin-bottom: 20px;
  border-radius: 50%;
  background-color: rgba(7, 193, 96, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 6px 20px rgba(7, 193, 96, 0.15);
}

.icon-image {
  width: 54px;
  height: 54px;
}

.title {
  font-size: 25px;
  font-weight: bold;
  color: #333;
  margin-bottom: 16px;
  line-height: 1.3;
}

.subtitle {
  font-size: 16px;
  color: #666;
  line-height: 1.5;
  max-width: 85%;
  margin: 0 auto;
}

.form-container {
  width: 100%;
  background-color: #fff;
  border-radius: 16px;
  padding: 28px 24px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
  margin-bottom: 30px;
  position: relative;
  z-index: 1;
}

.form-item {
  margin-bottom: 28px;
}

.form-item:last-child {
  margin-bottom: 10px;
}

.form-label {
  font-size: 17px;
  font-weight: 500;
  margin-bottom: 14px;
  color: #333;
  display: block;
}

.city-input-container {
  display: flex;
  position: relative;
  margin-bottom: 8px;
  border-bottom: 1px solid #eaeaea;
  padding-bottom: 8px;
}

.city-input {
  flex: 1;
  height: 46px;
  padding: 0 12px;
  font-size: 16px;
  border: none;
}

.location-button {
  background: none;
  border: none;
  padding: 0 12px;
  display: flex;
  align-items: center;
  color: #07c160;
}

.location-icon {
  width: 24px;
  height: 24px;
  font-size: 24px;
}

.gender-options {
  display: flex;
  justify-content: space-between;
  margin-top: 8px;
}

.gender-option {
  width: 48%;
  height: 50px;
  border: 1px solid #ddd;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  color: #333;
  font-weight: 500;
  transition: all 0.3s ease;
}

.gender-option.selected {
  background-color: #07c160;
  color: white;
  border-color: #07c160;
  box-shadow: 0 2px 8px rgba(7, 193, 96, 0.3);
}

.description-container {
  margin-top: 8px;
}

.description-input {
  width: 100%;
  height: 100px;
  border: 1px solid #eaeaea;
  border-radius: 10px;
  padding: 14px;
  font-size: 15px;
  box-sizing: border-box;
}

.buttons-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.continue-button {
  width: 100%;
  height: 50px;
  background-color: #07c160;
  color: white;
  border-radius: 25px;
  font-size: 17px;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 18px;
  box-shadow: 0 4px 12px rgba(7, 193, 96, 0.25);
  transition: all 0.3s ease;
}

.continue-button:active {
  transform: translateY(2px);
  box-shadow: 0 2px 8px rgba(7, 193, 96, 0.2);
}

.skip-button {
  width: 100%;
  height: 50px;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 25px;
  font-size: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
}

.skip-button:active {
  background-color: #ebebeb;
}

.divider {
  width: 100%;
  height: 1px;
  background-color: #eee;
  margin: 20px 0;
}

/* 滑动切换动画 */
.slider {
  height: 100%;
  width: 100%;
}

/* 微调样式适应单页 */
.input-placeholder {
  color: #aaa;
}
