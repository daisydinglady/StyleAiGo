/* wardrobe.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 20px;
}

/* 智衣橱标题 */
.wardrobe-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.wardrobe-title {
  font-size: 24px;
  font-weight: bold;
  color: #fff;
  background-color:#4285f4;
}

.add-item-btn {
  width: 40px;
  height: 40px;
  background-color: #07c160;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
}

/* 分类标签 */
.category-tabs {
  white-space: nowrap;
  margin-bottom: 20px;
}

.category-tab {
  display: inline-block;
  padding: 8px 16px;
  margin-right: 10px;
  background-color: #fff;
  border-radius: 20px;
  font-size: 14px;
  color: #666;
}

.category-tab.active {
  background-color: #07c160;
  color: white;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.search-input-container {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8px;
  padding: 8px 12px;
  margin-right: 10px;
}

.search-input-container icon {
  margin-right: 8px;
}

.search-input-container input {
  flex: 1;
  font-size: 14px;
}

.filter-btn {
  width: 40px;
  height: 40px;
  background-color: #fff;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-icon {
  width: 20px;
  height: 20px;
}

/* 衣物列表 */
.wardrobe-items {
  margin-bottom: 20px;
}

.wardrobe-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15px;
}

.wardrobe-item {
  background-color: #fff;
  border-radius: 8px;
  overflow: hidden;
}

.item-image-container {
  width: 100%;
  height: 150px;
  position: relative;
}

.item-image {
  width: 100%;
  height: 100%;
}

.item-info {
  padding: 10px;
}

.item-name {
  font-size: 14px;
  color: #333;
  margin-bottom: 4px;
}

.item-category {
  font-size: 12px;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 0;
}

.empty-image {
  width: 120px;
  height: 120px;
  margin-bottom: 20px;
}

.empty-text {
  font-size: 16px;
  color: #999;
  margin-bottom: 20px;
}

.add-clothing-btn {
  background-color: #07c160;
  color: white;
  border-radius: 20px;
  padding: 8px 20px;
  font-size: 14px;
}

/* 推荐穿搭 */
.recommended-outfits {
  margin-top: 20px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 15px;
}

.outfit-scroll {
  white-space: nowrap;
}

.outfit-card {
  display: inline-block;
  width: 280px;
  background-color: #fff;
  border-radius: 8px;
  margin-right: 15px;
  overflow: hidden;
}

.outfit-image-container {
  width: 100%;
  height: 180px;
  position: relative;
}

.outfit-image {
  width: 100%;
  height: 100%;
}

.outfit-info {
  padding: 12px;
}

.outfit-title {
  font-size: 16px;
  color: #333;
  margin-bottom: 4px;
}

.outfit-description {
  font-size: 12px;
  color: #999;
}

.outfit-actions {
  display: flex;
  padding: 12px;
  border-top: 1px solid #f0f0f0;
}

.outfit-action-btn {
  flex: 1;
  text-align: center;
  padding: 6px 0;
  font-size: 14px;
  color: #666;
}

.outfit-action-btn.save-btn {
  color: #07c160;
}

.outfit-action-btn.favorite-btn.active {
  color: #ff4d4f;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background-color: #fff;
  border-radius: 12px;
  overflow: hidden;
}

.modal-header {
  padding: 15px;
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  border-bottom: 1px solid #f0f0f0;
}

.modal-body {
  padding: 20px;
}

.modal-footer {
  display: flex;
  border-top: 1px solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  text-align: center;
  padding: 15px 0;
  font-size: 16px;
  color: #666;
}

.modal-btn.confirm-btn {
  color: #07c160;
  border-left: 1px solid #f0f0f0;
}

/* 表单样式 */
.form-item {
  margin-bottom: 20px;
}

.form-item label {
  display: block;
  font-size: 14px;
  color: #333;
  margin-bottom: 8px;
}

.form-item input {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 12px;
  font-size: 14px;
}

.picker-view {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 12px;
  font-size: 14px;
  line-height: 40px;
  color: #333;
}

.upload-area {
  width: 100%;
  height: 120px;
  border: 1px dashed #ddd;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  font-size: 24px;
  color: #999;
  margin-bottom: 8px;
}

.upload-text {
  font-size: 14px;
  color: #999;
}

.preview-image {
  width: 100%;
  height: 100%;
}

/* 筛选弹窗样式 */
.filter-modal {
  width: 90%;
}

.filter-section {
  margin-bottom: 20px;
}

.filter-title {
  font-size: 16px;
  color: #333;
  margin-bottom: 12px;
}

.color-options {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.color-option {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  border: 2px solid transparent;
}

.color-option.selected {
  border-color: #07c160;
}

.season-options {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.season-option {
  padding: 6px 12px;
  background-color: #f0f0f0;
  border-radius: 4px;
  font-size: 14px;
  color: #666;
}

.season-option.selected {
  background-color: #07c160;
  color: white;
}
