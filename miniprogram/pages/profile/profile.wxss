/* profile.wxss */
page {
  background-color: #f7f7f7;
  color: #333;
  font-size: 14px;
  line-height: 1.5;
}

.container {
  padding-bottom: 60px;
  width: 100%;
  box-sizing: border-box;
}

/* 个人资料头部 */
.profile-header {
  background-color: white;
  padding: 20px 20px;
  text-align: center;
  margin-bottom: 8px;
  width: 100%;
  box-sizing: border-box;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin: 0 auto 12px;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 18px;
  overflow: hidden;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.username {
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 4px;
}

.description {
  font-size: 14px;
  color: #888;
}

/* 卡片通用样式 */
.card {
  background-color: white;
  margin: 0 8px 8px;
  border-radius: 8px;
  overflow: hidden;
  width: calc(100% - 16px);
  box-sizing: border-box;
}

.card-title {
  padding: 12px 15px;
  font-size: 14px;
  font-weight: 500;
  color: #000;
}

.card-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  border-top: 1px solid #f5f5f5;
}

.item-label {
  color: #000;
  font-size: 15px;
}

.item-value {
  display: flex;
  align-items: center;
  color: #555;
  font-size: 15px;
}

.arrow {
  margin-left: 5px;
  color: #ccc;
}

.gray-text {
  color: #999;
}

/* 开关按钮样式 */
switch {
  transform: scale(0.9);
}

/* 退出登录按钮 */
.logout-btn-container {
  margin: 30px 8px;
  text-align: center;
  width: calc(100% - 16px);
  box-sizing: border-box;
}

.logout-btn {
  color: #576b95;
  background-color: transparent;
  border: none;
  font-size: 16px;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: white;
  border-radius: 8px;
  overflow: hidden;
  z-index: 1001;
}

.modal-header {
  padding: 15px;
  border-bottom: 1px solid #f0f0f0;
  text-align: center;
  font-weight: 500;
  font-size: 16px;
}

.modal-body {
  padding: 20px;
}

.modal-body input {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  box-sizing: border-box;
  font-size: 15px;
}

.description-textarea {
  width: 100%;
  height: 120px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 10px;
  box-sizing: border-box;
  font-size: 15px;
}

.modal-footer {
  display: flex;
  border-top: 1px solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  text-align: center;
  padding: 12px 0;
  font-size: 15px;
}

.modal-btn:first-child {
  border-right: 1px solid #f0f0f0;
}

.confirm-btn {
  color: #4080ff;
  font-weight: 500;
}

/* 性别选择器 */
.gender-selector {
  display: flex;
  gap: 16px;
}

.gender-option {
  flex: 1;
  padding: 16px 12px;
  border: 1px solid #ddd;
  border-radius: 4px;
  text-align: center;
  transition: all 0.2s;
}

.gender-option.selected {
  border-color: #4080ff;
  background-color: #f0f8ff;
  color: #4080ff;
}

.gender-icon {
  display: block;
  font-size: 24px;
  margin-bottom: 6px;
}

.gender-icon.male {
  color: #4080ff;
}

.gender-icon.female {
  color: #ff6b9b;
}

/* 单选项样式 */
.radio-item {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.radio-item text {
  margin-left: 8px;
  font-size: 15px;
}
